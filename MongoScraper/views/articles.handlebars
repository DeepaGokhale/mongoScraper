<div id="newsTitle">
    <h1 class="news"><img src="/images/onion.jpg" class="onion"> No Fake News!</h1>
</div>

<div id="newsList" class="border-primary">
    <ul>
        {{#each articles}}
        <div class="row">
            <div class="col-lg-9 news">
                {{!-- display title --}}
                    <p class="title">{{title}}</p>
                {{!-- display link --}}
                    <a href="#" class="link">{{link}}</a>
            </div>
            <div data-id="{{id}}">
                <button type="button" id="addNotes" class="btn addNotes btn-outline-primary justify-right" data-toggle="modal" data-target="#myModal">Article Notes</button>
                <button type="button" id= "delNotes" class="btn delArticle btn-outline-primary justify-right">Delete Article</button>
            </div>
        </div>
        {{/each}}
    </ul>
</div>
<form id="addNotesForm" name="addNotes" action="/api/articles/:id" method="post">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">    
        <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <li>
                        {{#each articlesNotes}}
                            <div class="row">
                                <p>{{id}}</p>
                            </div>
                        {{/each}}
                    </li>
                    <bold><h3 class="modal-title">Enter a note: </h3></bold>
                </div>
                <span>
                    <label for="noteTitle" class="news"><h3>Title:</h3></label>
                    <input type="text" id="noteTitle" name="noteTitle" class= "noteStyle"  placeholder="Note Title..">
                </span>
                <span>
                    <label for="noteText" class="news"><h3>Note:</h3></label>
                </span>
                <span>           
                    <input type="text" id="note" name="noteText" placeholder="Enter Note..">
                </span> 
                    <button id="btnSave" type="submit" class= "noteStyle" class="btn btn-default" data-dismiss="modal" value="">Save</button>
                    <input type="hidden" class="form-control" name="artId" id="artId" value="">
                </span>
            </div>
        </div>    
    </div>
</form>

